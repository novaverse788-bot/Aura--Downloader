{
    "$schema": "https://railway.app/schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "python api/main.py",
        "healthcheckPath": "/health",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "env": {
        "group": {
            "development": {
                "NODE_ENV": "development"
            },
            "production": {
                "NODE_ENV": "production",
                "PORT": "8080"
            }
        }
    }
}
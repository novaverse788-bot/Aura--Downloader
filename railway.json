{
    "$schema": "https://railway.app/schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "python3 api/main.py",
        "healthcheckPath": "/health",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "environments": [
        {
            "name": "production",
            "variables": {
                "PYTHON_VERSION": "3.11"
            }
        }
    ]
}